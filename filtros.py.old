# Filtro gris Rojo/Verde
def filtroGrisRojoVerde(imagen, nueva):
    rgb = imagen.convert('RGB')
    pixels = nueva.load()
    for i in range(imagen.size[0]):
        for j in range(imagen.size[1]):
            r,g,b = rgb.getpixel((i,j))
            rg = int((r+g)/2)
            pixels[i,j] = (rg,rg,rg)
    return nueva

